<div class="card my-4">
  <h5 class="card-header">Categories</h5>
  <div class="card-body">
    <div class="row">
      <ul class="list-group list-group-flush">
        <% @tags.each do |tag| %>
        <li class="list-group-item"><%= link_to tag.name, tag %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
